<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(gold_book) -%>">
  <span class='title'>
    <%= gold_book.author %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_gold_books_admin_gold_book_path(gold_book),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.gold_books_admin_gold_book_path(gold_book),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => gold_book.author),
        :method => :delete %>
  </span>
</li>
