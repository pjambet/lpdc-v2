%article#gold_book
  != @page.content_for(:body)
  %ul#gold_books
    - @gold_books.each do |gold_book|
      %li.gold-book-item
        - time = gold_book.created_at
        %time= "#{time.day}-#{time.month}-#{time.year}"
        %h3
          Ecrit par
          %em= gold_book.author
        %p!= gold_book.content

