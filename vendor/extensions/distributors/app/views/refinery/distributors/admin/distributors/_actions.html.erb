<ul>
  <% if ::Refinery::Distributors::Admin::DistributorsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.distributors_admin_distributors_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_distributors_admin_distributor_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Distributors::Admin::DistributorsController.sortable? && ::Refinery::Distributors::Distributor.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Distributors"),
                 refinery.distributors_admin_distributors_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Distributors"),
                 refinery.distributors_admin_distributors_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
