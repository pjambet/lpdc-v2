<%= form_for [refinery, :distributors_admin, @distributor] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @distributor,
              :include_object_name => true %>


  <div class='field'>
    <%= f.label :distributor_type -%>
    <%= f.text_field :distributor_type  -%>

  </div>


  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name  -%>

  </div>

  <div class='field'>
    <%= f.label :website -%>
    <%= f.text_field :website  -%>

  </div>

  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address  -%>

  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.distributors.admin.distributors.distributor'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @distributor.name) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
