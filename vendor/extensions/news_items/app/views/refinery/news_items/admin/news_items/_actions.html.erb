<ul>
  <% if ::Refinery::NewsItems::Admin::NewsItemsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.news_items_admin_news_items_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_news_items_admin_news_item_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::NewsItems::Admin::NewsItemsController.sortable? && ::Refinery::NewsItems::NewsItem.any? %>
  <li>
    <%= link_to t('.reorder', :what => "News Items"),
                 refinery.news_items_admin_news_items_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "News Items"),
                 refinery.news_items_admin_news_items_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
